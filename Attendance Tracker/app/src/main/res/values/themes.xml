<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VitAttendanceTracker" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="fontFamily">@font/open_sans</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorOnPrimary">@color/white_100</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple</item>
        <item name="colorOnSecondary">@color/white_87</item>

        <!-- Card Colors-->
        <item name="colorSurface">@color/white_100</item>
        <item name="colorOnSurface">@color/black_29</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_29</item>

        <!-- Text Color -->
        <item name="android:textColorPrimary">@color/black_29</item>

    </style>


    <style name="heading" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textColor">@color/white_100</item>
    </style>

    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:padding">@dimen/margin_medium</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">@dimen/cardCornerRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cardCornerRadius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/cardCornerRadius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cardCornerRadius</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#DEFFFFFF</item>
        <item name="color">#878787</item>
    </style>

    <style name="TextInputLayoutOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/cardCornerRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cardCornerRadius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/cardCornerRadius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cardCornerRadius</item>
        <item name="boxStrokeColor">@color/purple</item>
    </style>

    <style name="day_unselected">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black_29</item>
        <item name="android:textSize">8sp</item>
        <item name="android:background">@drawable/bg_day_unselected</item>
        <item name="android:gravity">center</item>
    </style>
</resources>